# 應用程式設定
APP_ENV=development
APP_DEBUG=true

# 資料庫
DATABASE_URL=sqlite+aiosqlite:///./stock_analysis.db

# LINE Login (階段四啟用)
# LINE_LOGIN_CHANNEL_ID=your_channel_id
# LINE_LOGIN_CHANNEL_SECRET=your_channel_secret
# LINE_LOGIN_CALLBACK_URL=https://your-domain.com/auth/line/callback

# LINE Messaging (階段六啟用)
# LINE_MESSAGING_CHANNEL_ACCESS_TOKEN=your_access_token

# JWT 設定 (階段四啟用)
JWT_SECRET_KEY=change-this-to-a-random-secret-key
JWT_EXPIRE_DAYS=7

# 資料更新設定
STOCK_DATA_CACHE_HOURS=4
CRYPTO_DATA_CACHE_MINUTES=15

# 技術指標預設參數
MA_SHORT=20
MA_MID=50
MA_LONG=200
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30

# 通知設定
BREAKOUT_THRESHOLD=2.0
VOLUME_ALERT_RATIO=2.0
